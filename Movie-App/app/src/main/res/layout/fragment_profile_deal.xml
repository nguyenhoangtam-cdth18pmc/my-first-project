<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.ProfileFragment">
    <TextView
        android:id="@+id/deal_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lịch sử trong 1 năm"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@android:color/black"/>
    <LinearLayout
        android:id="@+id/Linear_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/deal_year">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số phim đã coi: 10"
            android:layout_weight="1"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số Vé đã mua: 14"
            android:layout_weight="1"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền: 350k"
            android:layout_weight="1"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <TextView
        android:id="@+id/deal_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Linear_year"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Lịch sử trong 1 tháng "
        android:textColor="@android:color/black"
        android:textSize="20dp"/>
    <LinearLayout
        android:id="@+id/Linear_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/deal_month">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số phim đã coi: 2"
            android:layout_weight="1"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số Vé đã mua: 3"
            android:layout_weight="1"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền: 70k"
            android:layout_weight="1"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Linear_month"
        android:layout_marginTop="10dp"
        android:text="danh sách các đơn đặt lịch"/>

</RelativeLayout>
